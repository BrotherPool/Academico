    <section>
        <h2>Seção: Cadastro usuário</h2>
        <form action="/cadastro_de_usuarios/salvar" method="post">
            <div class="radio">
                <label><input type="radio" name="optradio" value="Professor" checked="checked">Professor</label>
            </div>
            <div class="radio">
                <label><input type="radio" name="optradio" value="Aluno">Aluno</label>
            </div>
            <div class="radio">
                <label><input type="radio" name="optradio" value="Secretária">Secretária</label>
            </div>
            <div class="radio">
                <label><input type="radio" name="optradio" value="Administrador">Administrador</label>
            </div>
            <fieldset>
                <label for="nome">Nome:</label>
                <input id="Nome" type="text" name="Nome" placeholder="Digite o nome do usuário">
            </fieldset>
            <fieldset>
                <label for="nascimento">Data de Nascimento:</label>
                <input id="Data_Nascimento" type="text" name="Data_Nascimento" placeholder="Digite a data de nascimento">
            </fieldset>
            <fieldset>
                <label for="cpf">CPF:</label>
                <input id="Cpf" type="text" name="Cpf" placeholder="Digite o CPF do usuário">
            </fieldset>
            <fieldset>
                <label for="email">E-MAIL:</label>
                <input id="Email" type="text" name="Email" placeholder="Digite o e-mail do usuário">
            </fieldset>
            <fieldset>
                <label for="telefone">Telefone:</label>
                <input id="Telefone" type="text" name="Telefone" placeholder="Digite o telefone do usuário">
            </fieldset>
            <fieldset>
                <label for="departamento">Departamento:</label>
                <select id="departamento" name="departamento">
            <%for (var i=0; i<Object.keys(departamentos).length;i++) {%>
            <option value="<%=departamentos[i].idDepartamento%>"><%=departamentos[i].Nome%></option>
            <%}%>
          </select>
            </fieldset>
            <button id="adicionar-usuario" type="submit" class="botao bto-principal">Adicionar</button>

        </form>

