    <section>
        <h2>Seção: Cadastro Secretaria</h2>
        <form action="/cadastro_secretaria/salvar" method="post">
            <fieldset>
                <label for="nome">Nome:</label>
                <input id="Nome" type="text" name="Nome" placeholder="Digite o nome da Secretaria">
            </fieldset>
            <fieldset>
                <label for="nascimento">Data de Nascimento:</label>
                <input id="Data_Nascimento" type="date" name="Data_Nascimento" placeholder="Digite a data de nascimento da Secretaria">
            </fieldset>
            <fieldset>
                <label for="cpf">CPF:</label>
                <input id="Cpf" type="text" name="Cpf" placeholder="Digite o CPF da Secretaria">
            </fieldset>
            <fieldset>
                <label for="email">E-MAIL:</label>
                <input id="Email" type="text" name="Email" placeholder="Digite o e-mail da Secretaria">
            </fieldset>
            <fieldset>
                <label for="telefone">Telefone:</label>
                <input id="Telefone" type="text" name="Telefone" placeholder="Digite o telefone da Secretaria">
            </fieldset>
            <fieldset>
                <label for="endereco">Endereço:</label>
                <input id="Endereco" type="text" name="Endereco" placeholder="Digite o endereço da Secretaria">
            </fieldset>
            <fieldset>
                <label for="Departamento_idDepartamento">Departamento:</label>
                <div class="select-estiloso">
                    <select id="Departamento_idDepartamento" name="Departamento_idDepartamento">
            <%for (var i=0; i<Object.keys(departamentos).length;i++) {%>
            <option value="<%=departamentos[i].idDepartamento%>"><%=departamentos[i].Nome%></option>
            <%}%>
          </select>
                </div>
            </fieldset>
            <button id="adicionar-usuario" type="submit" class="botao bto-principal">Adicionar</button>

        </form>

