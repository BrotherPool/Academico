    <section>
      <h2>Seção: Cadastro de cursos</h2>
      <form action="/cadastro_de_cursos/salvar" method="post">
        <fieldset>
          <label for="Nome">Curso:</label>
          <input id="Nome" name="Nome" type="text" placeholder="Digite o nome do curso">
        </fieldset>
        <fieldset>
          <label for="Carga_Horaria">Carga horária:</label>
          <input id="Carga_Horaria" name="Carga_Horaria" type="text" placeholder="Digite a carga horária do curso">
        </fieldset>
        <fieldset>
          <label for="Descricao">Descrição do Curso:</label>
          <input id="Descricao" name="Descricao" type="text" placeholder="Digite a carga horária do curso">
        </fieldset>
        <fieldset>
          <label for="Coordenador">Coordenador:</label>
          <input id="Coordenador" name="Coordenador" type="text" placeholder="Digite o coordenador do curso">
        </fieldset>
        <fieldset>
          <label for="Departamento_idDepartamento">Departamento:</label>
          <div class="select-estiloso">
          <select id="Departamento_idDepartamento" name="Departamento_idDepartamento">
            <%for (var i=0; i<Object.keys(departamentos).length;i++) {%>
            <option value="<%=departamentos[i].idDepartamento%>"><%=departamentos[i].Nome%></option>
            <%}%>
          </select>
          </div>
        </fieldset>
        
        <button id="adicionar-curso" class="botao bto-principal">Adicionar</button>

      </form>

